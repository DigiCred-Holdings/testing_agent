{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",                            
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["dotenv/config"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"           
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.json"
    }
  }
}
